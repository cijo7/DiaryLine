<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.solidskulls.diaryline" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:fullBackupContent="false">
        <activity
            android:name=".DLMainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            <!--
              ATTENTION: This intent was auto-generated. Follow instructions at
              https://g.co/AppIndexing/AndroidStudio to publish your Android app deep links.
            -->
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <data
                    android:host="diaryline.solidskulls.com"
                    android:pathPrefix="/home"
                    android:scheme="http" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Settings"
            android:label="@string/title_activity_settings"
            android:parentActivityName=".DLMainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="DLMainActivity" />
        </activity>
        <activity
            android:name=".Help"
            android:label="@string/title_activity_help"
            android:parentActivityName=".DLMainActivity"
            android:theme="@style/AppTheme.NoActionBar" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="DLMainActivity" />
        </activity>
        <activity
            android:name=".Editor"
            android:label="@string/title_activity_editor"
            android:parentActivityName=".DLMainActivity"
            android:theme="@style/AppTheme.NoActionBar" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.solidskulls.diaryline.DLMainActivity" />
        </activity>

        <provider
            android:name=".data.ContentManager"
            android:authorities="com.solidskulls.diaryline"
            android:enabled="true"
            android:exported="false" >
        </provider>

        <activity
            android:name=".ui.SignatureMaker"
            android:screenOrientation="landscape" >
        </activity>

        <receiver
            android:name=".LauncherTaskBG"
            android:enabled="true"
            android:exported="false" >
        </receiver>

        <activity
            android:name=".EditorList"
            android:label="@string/title_activity_editor_list"
