<android.support.v4.widget.NestedScrollView
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.solidskulls.diaryline.DiaryTextPreview"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
    android:layout_height="match_parent"
        android:layout_width="wrap_content"
    android:weightSum="1">
    <ImageView
        android:id="@+id/blankIcon"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:visibility="gone"
        android:contentDescription="@string/diary_empty_content"
        android:background="@drawable/ic_blank_24dp"
        android:layout_centerInParent="true"
        android:padding="20dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:padding="20dp"
        android:text="@string/empty_string"
        android:visibility="gone"
        android:textSize="20sp"
        android:layout_below="@+id/blankIcon"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:id="@+id/blankIconText" />



    <TextView
        android:id="@+id/preview_Text"
        android:layout_width="match_parent" android:layout_height="wrap_content"
        android:padding="@dimen/content_padding"
        android:scrollbars="vertical"
        />

    <ImageView
        android:layout_width="150dp"
        android:layout_height="75dp"
        android:layout_gravity="start"
        android:visibility="visible"
        android:layout_below="@id/preview_Text"
        android:id="@+id/imageView_sign"
        android:contentDescription="@string/author_sign"/>
    </RelativeLayout>

</android.support.v4.widget.NestedScrollView>