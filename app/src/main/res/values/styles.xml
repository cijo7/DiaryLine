<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <style name="funkyButton">
        <item name="android:textColor">@color/buttonTextColor</item>
        <item name="android:background">@color/buttonBGColor</item>
        <item name="android:textSize">@dimen/buttonTextSize</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">@dimen/buttonPadding</item>
        <item name="android:thumbTextPadding">@dimen/buttonPadding</item>
    </style>



    <style name="Cards">
        <item name="contentPaddingBottom">@dimen/cardPadding</item>
        <item name="cardCornerRadius">@dimen/cardCornerRadius</item>
        <item name="android:layout_marginLeft">@dimen/cardMargin</item>
        <item name="android:layout_marginRight">@dimen/cardMargin</item>
    </style>
    <style name="cardTitle">
        <item name="android:textSize">@dimen/cardTitleTextSize</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:padding">@dimen/cardTitlePadding</item>
        <item name="android:drawablePadding">@dimen/cardTitleIconPadding</item>
        <item name="android:textStyle">bold</item>
        <item name="android:typeface">sans</item>
    </style>
    <style name="cardText">
        <item name="android:padding">@dimen/cardTextPadding</item>
        <item name="android:textSize">@dimen/cardTextSize</item>
        <item name="android:fontFamily">Serif</item>
        <item name="android:maxLines">4</item>
    </style>


    <style name="popupActionButtons">
        <item name="android:drawablePadding">5dp</item>
        <item name="android:padding">10dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#000</item>
    </style>

    <style name="editor_titles">
        <item name="android:textSize">20sp</item>
        <item name="android:lines">1</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:layout_marginTop">5dp</item>
    </style>
</resources>
